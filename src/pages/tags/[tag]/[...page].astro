---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const tags = getUniqueTags(posts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPosts = getPostsByTag(posts, tag);

    return paginate(tagPosts, {
      params: { tag },
      props: { tagName },
      pageSize: SITE.postPerPage,
    });
  });
}

const params = Astro.params;
const { tag } = params;
const { page, tagName } = Astro.props;
---

<Layout title={`Tag: ${tagName} | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 py-8">
    {/* 页面标题 */}
    <div class="mb-8">
      <h1 class="text-2xl font-semibold sm:text-3xl">
        Tag: <span transition:name={tag} class="text-accent">{tagName}</span>
      </h1>
      <p class="mt-2 text-muted-foreground italic">
        All the articles with the tag "{tagName}".
      </p>
    </div>

    {/* 网格布局 */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {page.data.map(data => <Card variant="h3" {...data} />)}
    </div>

    {/* 分页 */}
    {page.lastPage > 1 && (
      <div class="mt-12">
        <Pagination {page} />
      </div>
    )}
  </main>

  <Footer noMarginTop />
</Layout>
