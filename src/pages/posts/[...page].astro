---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { SITE } from "@/config";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return paginate(getSortedPosts(posts), { pageSize: SITE.postPerPage });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<Layout title={`Posts | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 py-8">
    {/* 页面标题 */}
    <div class="mb-8">
      <h1 class="text-2xl font-semibold sm:text-3xl">Posts</h1>
      <p class="mt-2 text-muted-foreground italic">
        All the articles I've posted.
      </p>
    </div>

    {/* 网格布局 */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {page.data.map(data => <Card variant="h3" {...data} />)}
    </div>

    {/* 分页 */}
    {page.lastPage > 1 && (
      <div class="mt-12">
        <Pagination {page} />
      </div>
    )}
  </main>

  <Footer noMarginTop />
</Layout>
